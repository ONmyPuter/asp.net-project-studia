@model IEnumerable<Location>

@{
    ViewData["Title"] = "Lokalizacje";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Punkty odbioru samochodów</h2>
    <a asp-action="Create" class="btn btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
        </svg>
        Dodaj lokalizację
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">Brak lokalizacji</h4>
        <p>Obecnie nie ma dostępnych lokalizacji w systemie.</p>
    </div>
}
else
{
    <div class="row">
        @foreach (var location in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm border-primary">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-geo-alt-fill text-primary" viewBox="0 0 16 16">
                                    <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10m0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6"/>
                                </svg>
                            </div>
                            <div>
                                <h5 class="card-title mb-0">@location.City</h5>
                                <small class="text-muted">Punkt odbioru</small>
                            </div>
                        </div>
                        <hr>
                        <p class="card-text">
                            <strong>Punkt odbioru samochodu</strong><br>
                            <small class="text-muted">
                                Odbierz zarezerwowany samochód w wygodnej lokalizacji w mieście @location.City. 
                                Punkt jest dostępny w godzinach 8:00 - 20:00, 7 dni w tygodniu.
                            </small>
                        </p>
                        <div class="mt-3">
                            <span class="badge bg-success">Otwarte</span>
                            <span class="badge bg-info ms-2">Parking dostępny</span>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a asp-controller="Reservations" asp-action="Create" class="btn btn-outline-primary btn-sm w-100">
                            Zarezerwuj w @location.City
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
