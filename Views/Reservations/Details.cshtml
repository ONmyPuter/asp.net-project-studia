@model Reservation
@using CarReservationSystemApp

@{
    ViewData["Title"] = $"Szczegóły rezerwacji #{Model.Id}";
    var duration = (Model.To.Date - Model.From.Date).Days;
    var isPast = Model.To.Date < DateTime.Today;
    var isCurrent = Model.From.Date <= DateTime.Today && Model.To.Date >= DateTime.Today;
    var carPrice = Model.Car != null ? CarsController.GetPricePerDay(Model.Car) : 0;
    var insurancePrice = Model.InsurancePolicy?.PricePerDay ?? 0;
    var totalCost = duration * (carPrice + insurancePrice);
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-clipboard2-data" viewBox="0 0 16 16">
                    <path d="M9.5 0a.5.5 0 0 1 .5.5.5.5 0 0 0 .5.5.5.5 0 0 1 .5.5V2a.5.5 0 0 1-.5.5h-5A.5.5 0 0 1 5 2v-.5a.5.5 0 0 1 .5-.5.5.5 0 0 0 .5-.5.5.5 0 0 1 .5-.5z"/>
                    <path d="M3 2.5a.5.5 0 0 1 .5-.5H4a.5.5 0 0 0 0-1h-.5A1.5 1.5 0 0 0 2 2.5v12A1.5 1.5 0 0 0 3.5 16h9a1.5 1.5 0 0 0 1.5-1.5v-12A1.5 1.5 0 0 0 12.5 1H12a.5.5 0 0 0 0 1h.5a.5.5 0 0 1 .5.5v12a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5z"/>
                    <path d="M10 7a1 1 0 1 1 2 0v5a1 1 0 1 1-2 0zm-6 4a1 1 0 1 1 2 0v1a1 1 0 1 1-2 0zm4-3a1 1 0 0 0-1 1v3a1 1 0 1 0 2 0V9a1 1 0 0 0-1-1"/>
                </svg>
                Rezerwacja #@Model.Id
            </h2>
            <div>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger me-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                    </svg>
                    Usuń rezerwację
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
                    </svg>
                    Powrót do listy
                </a>
            </div>
        </div>

        <!-- Status Badge -->
        <div class="mb-4">
            @if (Model.IsFinished)
            {
                <span class="badge bg-success fs-5">Zakończona (Admin)</span>
            }
            else if (isPast)
            {
                <span class="badge bg-secondary fs-5">Zakończona (Termin)</span>
            }
            else if (isCurrent)
            {
                <span class="badge bg-info fs-5">W trakcie</span>
            }
            else
            {
                <span class="badge bg-warning text-dark fs-5">Nadchodząca</span>
            }
        </div>

        <div class="row">
            <!-- Left Column - Reservation Details -->
            <div class="col-lg-6 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Dane rezerwacji</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-5">ID Rezerwacji:</dt>
                            <dd class="col-sm-7">#@Model.Id</dd>

                            <dt class="col-sm-5">Data rozpoczęcia:</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-primary">@Model.From.Date.ToString("dd.MM.yyyy")</span>
                            </dd>

                            <dt class="col-sm-5">Data zakończenia:</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-success">@Model.To.Date.ToString("dd.MM.yyyy")</span>
                            </dd>

                            <dt class="col-sm-5">Czas trwania:</dt>
                            <dd class="col-sm-7">
                                <strong>@duration @(duration == 1 ? "dzień" : "dni")</strong>
                            </dd>

                            <dt class="col-sm-5">Lokalizacja odbioru:</dt>
                            <dd class="col-sm-7">
                                <span class="text-success">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
                                        <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A32 32 0 0 1 8 14.58a32 32 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10"/>
                                    </svg>
                                    @(Model.PickupLocation?.City ?? "N/A")
                                </span>
                            </dd>

                            <dt class="col-sm-5">Lokalizacja zwrotu:</dt>
                            <dd class="col-sm-7">
                                <span class="text-danger">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                                        <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10m0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6"/>
                                    </svg>
                                    @(Model.DropoffLocation?.City ?? "N/A")
                                </span>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- Right Column - User Info -->
            <div class="col-lg-6 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">Dane użytkownika</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-5">Email użytkownika:</dt>
                            <dd class="col-sm-7">
                                @if (Model.User != null)
                                {
                                    <span class="badge bg-info text-dark">@Model.User.Email</span>
                                }
                                else
                                {
                                    <span class="text-muted">Brak danych</span>
                                }
                            </dd>

                            <dt class="col-sm-5">ID użytkownika:</dt>
                            <dd class="col-sm-7">
                                <code class="small">@(Model.UserId ?? "N/A")</code>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- Car Info -->
            <div class="col-lg-6 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Samochód</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Car != null)
                        {
                            <h4 class="card-title">@Model.Car.Brand @Model.Car.Model</h4>
                            <dl class="row mb-0">
                                <dt class="col-sm-5">ID samochodu:</dt>
                                <dd class="col-sm-7">#@Model.Car.Id</dd>

                                <dt class="col-sm-5">Liczba miejsc:</dt>
                                <dd class="col-sm-7">@Model.Car.Seats</dd>

                                <dt class="col-sm-5">Rodzaj paliwa:</dt>
                                <dd class="col-sm-7">@(Model.Car.FuelType ?? "-")</dd>

                                <dt class="col-sm-5">Skrzynia biegów:</dt>
                                <dd class="col-sm-7">@(Model.Car.Transmission ?? "-")</dd>

                                <dt class="col-sm-5">Aktualna lokalizacja:</dt>
                                <dd class="col-sm-7">
                                    @if (Model.Car.CurrentLocation != null)
                                    {
                                        <span class="badge bg-info text-dark">@Model.Car.CurrentLocation.City</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Nieprzypisana</span>
                                    }
                                </dd>

                                <dt class="col-sm-5">Cena za dzień:</dt>
                                <dd class="col-sm-7"><strong>@carPrice.ToString("F2") zł</strong></dd>
                            </dl>
                        }
                        else
                        {
                            <p class="text-muted">Brak danych o samochodzie</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Insurance Info -->
            <div class="col-lg-6 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">Ubezpieczenie</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.InsurancePolicy != null)
                        {
                            <h4 class="card-title">
                                <span class="badge @(Model.InsurancePolicy.PolicyType == "Premium" ? "bg-warning text-dark" : Model.InsurancePolicy.PolicyType == "Standard" ? "bg-info" : "bg-secondary")">
                                    @Model.InsurancePolicy.PolicyType
                                </span>
                            </h4>
                            <dl class="row mb-0">
                                <dt class="col-sm-5">Numer polisy:</dt>
                                <dd class="col-sm-7"><code>@Model.InsurancePolicy.PolicyNumber</code></dd>

                                <dt class="col-sm-5">Opis:</dt>
                                <dd class="col-sm-7">@Model.InsurancePolicy.Description</dd>

                                <dt class="col-sm-5">Cena za dzień:</dt>
                                <dd class="col-sm-7"><strong>@Model.InsurancePolicy.PricePerDay.ToString("F2") zł</strong></dd>
                            </dl>
                        }
                        else
                        {
                            <p class="text-muted">Brak ubezpieczenia</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Cost Summary -->
            <div class="col-12 mb-4">
                <div class="card shadow-sm border-primary">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Podsumowanie kosztów</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-3">
                                <h6 class="text-muted">Wynajem</h6>
                                <p class="fs-4 mb-0">@((duration * carPrice).ToString("F2")) zł</p>
                                <small class="text-muted">@carPrice.ToString("F2") zł × @duration dni</small>
                            </div>
                            <div class="col-md-3">
                                <h6 class="text-muted">Ubezpieczenie</h6>
                                <p class="fs-4 mb-0">@((duration * insurancePrice).ToString("F2")) zł</p>
                                <small class="text-muted">@insurancePrice.ToString("F2") zł × @duration dni</small>
                            </div>
                            <div class="col-md-3">
                                <h6 class="text-muted">Czas trwania</h6>
                                <p class="fs-4 mb-0">@duration @(duration == 1 ? "dzień" : "dni")</p>
                            </div>
                            <div class="col-md-3">
                                <h6 class="text-muted">SUMA</h6>
                                <p class="fs-3 fw-bold text-primary mb-0">@totalCost.ToString("F2") zł</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
