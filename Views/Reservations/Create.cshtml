@model Reservation

<h2 class="mb-4">Nowa rezerwacja</h2>

<div class="card shadow-sm">
    <div class="card-body">

        <form asp-action="Create" method="post">

            <!-- SAMOCHÃ“D -->
            <div class="mb-3">
                <label class="form-label">SamochÃ³d</label>
                <select asp-for="CarId"
                        asp-items="ViewBag.Cars"
                        class="form-select"
                        id="carSelect">
                </select>
            </div>

            <!-- DATY -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Od</label>
                    <input asp-for="From"
                           type="date"
                           class="form-control"
                           id="fromDate" />
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Do</label>
                    <input asp-for="To"
                           type="date"
                           class="form-control"
                           id="toDate" />
                </div>
            </div>

            <!-- CENA -->
            <div class="mb-3">
                <label class="form-label">Szacunkowy koszt</label>
                <input type="text"
                       class="form-control"
                       id="price"
                       readonly />
            </div>

            <button type="submit" class="btn btn-primary">
                ðŸš— Zarezerwuj
            </button>

            <a asp-action="Index" class="btn btn-secondary ms-2">
                Anuluj
            </a>

        </form>

    </div>
</div>
@section Scripts {
<script>
    const fromDate = document.getElementById("fromDate");
    const toDate = document.getElementById("toDate");
    const priceField = document.getElementById("price");

    const pricePerDay = 150; // zÅ‚ za dzieÅ„

    function calculatePrice() {
        if (fromDate.value && toDate.value) {
            const from = new Date(fromDate.value);
            const to = new Date(toDate.value);

            const diffTime = to - from;
            const diffDays = diffTime / (1000 * 60 * 60 * 24);

            if (diffDays > 0) {
                priceField.value = diffDays * pricePerDay + " zÅ‚";
            } else {
                priceField.value = "";
            }
        }
    }

    fromDate.addEventListener("change", calculatePrice);
    toDate.addEventListener("change", calculatePrice);
</script>
}
